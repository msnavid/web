year={2019},
month={May},
day={06},
volume={9},
number={1},
pages={6925},
abstract={The objectives of the study were to investigate changes in pain perception and neural activity during tonic pain due to altered sensory input from the spine following chiropractic spinal adjustments. Fifteen participants with subclinical pain (recurrent spinal dysfunction such as mild pain, ache or stiffness but with no pain on the day of the experiment) participated in this randomized cross-over study involving a chiropractic spinal adjustment and a sham session, separated by 4.0{\thinspace}{\textpm}{\thinspace}4.2 days. Before and after each intervention, 61-channel electroencephalography (EEG) was recorded at rest and during 80{\thinspace}seconds of tonic pain evoked by the cold-pressor test (left hand immersed in 2{\thinspace}{\textdegree}C water). Participants rated the pain and unpleasantness to the cold-pressor test on two separate numerical rating scales. To study brain sources, sLORETA was performed on four EEG frequency bands: delta (1--4{\thinspace}Hz), theta (4--8{\thinspace}Hz), alpha (8--12{\thinspace}Hz) and beta (12--32{\thinspace}Hz). The pain scores decreased by 9{\%} after the sham intervention (p{\thinspace}<{\thinspace}0.05), whereas the unpleasantness scores decreased by 7{\%} after both interventions (p{\thinspace}<{\thinspace}0.05). sLORETA showed decreased brain activity following tonic pain in all frequency bands after the sham intervention, whereas no change in activity was seen after the chiropractic spinal adjustment session. This study showed habituation to pain following the sham intervention, with no habituation occurring following the chiropractic intervention. This suggests that the chiropractic spinal adjustments may alter central processing of pain and unpleasantness.},
issn={2045-2322},
doi={10.1038/s41598-019-42984-3},
url={https://doi.org/10.1038/s41598-019-42984-3}
}


@Article{Jochumsen2018-18,
AUTHOR = {Jochumsen, Mads and Cremoux, Sylvain and Robinault, Lucien and Lauber, Jimmy and Arceo, Juan Carlos and Navid, Muhammad Samran and Nedergaard, Rasmus Wiberg and Rashid, Usman and Haavik, Heidi and Niazi, Imran Khan},
TITLE = {Investigation of Optimal Afferent Feedback Modality for Inducing Neural Plasticity with A Self-Paced Brain-Computer Interface},
