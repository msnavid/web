month = {feb},
pages = {2663},
publisher = {Frontiers Media SA},
title = {{Chiropractic Spinal Adjustment Increases the Cortical Drive to the Lower Limb Muscle in Chronic Stroke Patients}},
volume = {12},
year = {2022}
